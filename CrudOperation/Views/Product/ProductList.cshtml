@model IEnumerable<CrudOperation.Models.ViewModel.ProductViewModel>
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <h2>Product Info</h2>
    @* <div>
        <button type="button" onclick="RdlcReport()" class="btn btn-primary"><i class="fa fa-save" style="font-size:13px;color:white"></i> RDLC Report</button>
    </div>
    </br> *@
    <table>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Amount</th>
        </tr>
        @foreach (var data in Model)
        {
            <tr>
                <td>@data.Product</td>
                <td>@data.Quantity</td>
                <td>@data.Rate</td>
                <td>@data.Amount</td>
            </tr>
        }
    </table>
</body>
</html>

<script type="text/javascript">
    function RdlcReport() {
        window.location = '/Student/StudentListRdlc';
    }
</script>


