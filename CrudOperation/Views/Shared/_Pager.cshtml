@model CrudOperation.Models.Common.Pager
@{
    string action = Model.Action;
    string controller = Model.Controller;
    string area = Model.Area;
}

@if (Model.TotalPages > 0)
{
    <ul class="pagination pagination-rounded justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item"><a class="page-link" asp-action="@action" asp-controller="@controller" asp-area="@area" asp-route-ddlPage="@Model.PageSize" asp-route-pg="1">First</a></li>
            <li class="page-item"><a class="page-link" asp-action="@action" asp-controller="@controller" asp-area="@area" asp-route-ddlPage="@Model.PageSize" asp-route-pg="@(Model.CurrentPage-1)">Previous</a></li>
        }
        @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
        {
            <li class="page-item @(pge==Model.CurrentPage?"active":"")">
                <a class="page-link" asp-action="@action" asp-controller="@controller" asp-area="@area" asp-route-ddlPage="@Model.PageSize" asp-route-pg="@pge">@pge</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item"><a class="page-link" asp-action="@action" asp-controller="@controller" asp-area="@area" asp-route-ddlPage="@Model.PageSize" asp-route-pg="@(Model.CurrentPage+1)">Next</a></li>
            <li class="page-item"><a class="page-link" asp-action="@action" asp-controller="@controller" asp-area="@area" asp-route-ddlPage="@Model.PageSize" asp-route-pg="@(Model.TotalPages)">Last</a></li>
        }
    </ul>
}
